int yyerror(YYLTYPE* llocp, struct script_parse_ctx* ctx, yyscan_t scanner, const char* msg) {
    script_parse_ctx_add_diag(ctx, &(struct script_diag) {.kind = DIAG_ERR,
            .line = llocp->first_line,
            .col = llocp->first_column,
            .msg = strdup(msg)
        });
    return 0;
}
